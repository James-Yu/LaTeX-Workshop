{
  "comments": {
    "lineComment": "%"
  },
  "brackets": [["{", "}"], ["[", "]"], ["(", ")"], ["\\left", "\\right"]],
  "autoClosingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["`", "'"]],
  "surroundingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["\"", "\""], ["'", "'"], ["`", "'"], ["$", "$"]],
  "indentationRules": {
    "increaseIndentPattern": "(\\\\begin{(?!document))",
    "decreaseIndentPattern": "(\\\\end{(?!document))"
  },
  "folding": {
    "markers": {
      "start": "^\\s*%\\s*#?region\\b.*",
      "end": "^\\s*%\\s*#?endregion\\b.*"
    }
  },
  "autoCloseBefore": ";:.,=}])>\\` \n\t$",
  "wordPattern": "(__)|(\\*\\*)|(@.)|(\\.\\.\\.)|([^\\s`'\"~_!?|$#@%^&*\\-=+;:,.<>(){}[\\]\\\\\\/]{2,})"
}
