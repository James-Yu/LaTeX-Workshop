{
  "comments": {
    "lineComment": "^^A"
  },
  "brackets": [["{", "}"], ["[", "]"], ["(", ")"]],
  "autoClosingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["`", "'"]],
  "surroundingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["\"", "\""], ["'", "'"], ["`", "'"], ["$", "$"]],
  "indentationRules": {
    "increaseIndentPattern": "(\\\\begin{(?!(document|macrocode)))|(\\\\documentclass)",
    "decreaseIndentPattern": "(\\\\end{)|(\\\\begin{document})"
  },
  "folding": {
    "markers": {
      "start": "^\\s*%\\s*#?region\\b.*",
      "end": "^\\s*%\\s*#?endregion\\b.*"
    }
  }
}
