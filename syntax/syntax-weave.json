{
	"fileTypes": [
		"jlsweave",
		"rsweave"
	],
	"comments": {
		"lineComment": "%"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\\left(", "\\right)"],
		["\\left[", "\\right]"],
		["\\left\\{", "\\right\\}"],
		["\\left<", "\\right>"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["`", "'"]
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
		["`", "'"],
		["$", "$"]
	],
	"indentationRules": {
		"increaseIndentPattern": "(\\\\begin{(?!document))",
		"decreaseIndentPattern": "(\\\\end{(?!document))"
	},
	"folding": {
		"markers": {
			"start": "^((\\s*?)<<.*?>>=(?:\\s*))$",
			"end": "^(\\2@(?:\\s*))$"
		}
	},
	"autoCloseBefore": ";:.,=}])>\\` \n\t$",
	"wordPattern": "(__)|(\\*\\*)|(@.)|(\\.\\.\\.)|([^\\s`'\"~_!?|$#@%^&*\\-=+;:,.<>(){}[\\]\\\\\\/]{2,})"

}
